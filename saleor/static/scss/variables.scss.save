// GLOBAL
$global-padding: 1rem;
$global-margin: 1rem;
$button-border-radius: 12px;

// COLORS
$body-color: #2eafac;
$white: #fafafa;
$light-gray: #f1f5f5;
$gray: #d3d1d0;
$darken-gray: darken($gray, 10%);
$skull-gray: #828282;
$blue: #3f67bb;
$darken-blue: darken($blue, 10%);
$dark-blue: #0f378a;
$red: #f47e6f;
$dark-red: #ef3c36;
$green: #53b66d;
$beige: #ffe1c3;
$orange: #559643;
$turquoise: #2eafac;
$light-turquoise: #98cdca;

// TYPOGRAPHY
$font-family-sans-serif: "Museo_Slab", sans-serif;
$h1-font-size: 3rem;
$h2-font-size: 1.3rem;
$h3-font-size: 1rem;

$theme-colors: (
  primary: $light-turquoise,
  secondary: $white,
  success: $green,
  info: $turquoise,
  warning: $orange,
  danger: $dark-red,
  light: $light-turquoise,
  dark: $turquoise
);

@font-face {
  font-family: Roboto;
  src: local(Roboto Thin), url(/static/assets/Roboto-Thin.woff2) format("woff2"), url(/static/assets/Roboto-Thin.woff) format("woff");
  font-weight: 100;
}

@font-face {
  font-family: Roboto;
  src: local(Roboto Light), url(/static/assets/Roboto-Light.woff2) format("woff2"), url(/static/assets/Roboto-Light.woff) format("woff");
  font-weight: 300;
}

@font-face {
  font-family: Roboto;
  src: local(Roboto Regular), url(/static/assets/Roboto-Regular.woff2) format("woff2"), url(/static/assets/Roboto-Regular.woff) format("woff");
  font-weight: 400;
}

@font-face {
  font-family: Roboto;
  src: local(Roboto Medium), url(/static/assets/Roboto-Medium.woff2) format("woff2"), url(/static/assets/Roboto-Medium.woff) format("woff");
  font-weight: 500;
}

@font-face {
  font-family: Roboto;
  src: local(Roboto Bold), url(/static/assets/Roboto-Bold.woff2) format("woff2"), url(/static/assets/Roboto-Bold.woff) format("woff");
  font-weight: 700;
}
